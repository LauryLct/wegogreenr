<%= simple_form_for [activity, message], id:'form_bloc_message' do |f| %>
  <%= f.input :content, label: false %>
  <%= f.button :submit, value: "j'envoie mon avis", id: 'form_message_button', style: "display: none;"  %>
<% end %>

<script>
  const input = document.getElementById('message_content');
  console.log(input);
  input.addEventListener('keypress', (event) => {
  if (event.keyCode === 13) {
    event.preventDefault();
    console.log(document.querySelector('#form_message_button'));
    document.querySelector('#form_message_button').click();
  }
  });
</script>
