<div class="container sign-bkg">
  <div class="row justify-content-center">
    <div class="form-img-bckg"><%= image_tag "Logo3.png" %></div>
    <div class="col-8 col-lg-6">
      <div class="form-sign">
        <h2>Je m'identifie</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                required: true,
                placeholder: "nikolas.bulot@wegogreenr.com",
                autofocus: true,
                input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                label: "Mot de passe",
                placeholder: "******",
                required: true,
                input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Let's go GreenR", class: "EdgeButton--primary" %>
          </div>
        <% end %>
        <div class="form-shared-links">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
