<div class="container sign">
  <div class="form-img"><%= image_tag "Logo3.png" %></div>
  <br>
  <br>
  <br>
  <br>
  <br>
  <center>
    <h1>Je m'enregistre</h1>
  </center>
  <div class="form-sign">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :email,
                required: true,
                autofocus: true,
                placeholder: "nikolas.bulot@wegogreenr.com",
                input_html: { autocomplete: "email" }%>
        <%= f.input :password,
                label: "Mot de passe",
                placeholder: "******",
                required: true,
                hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                label: "Confirmez le mot de passe",
                placeholder: "******",
                required: true,
                input_html: { autocomplete: "new-password" } %>
      </div>
      <center>
        <%= f.button :submit, "Let's go GreenR", class: "EdgeButton--primary" %>
      </center>
    <% end %>
  </div>
</div>
