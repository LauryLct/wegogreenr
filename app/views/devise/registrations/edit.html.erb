<div class="container sign-bkg">
  <div class="row justify-content-center">
    <div class="form-img-bckg"><%= image_tag "Logo3.png" %></div>
    <div class="col-8 col-lg-6">
      <div class="form-sign">
        <h2>Modifier <%= resource_name.to_s.humanize %></h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>
            <%= f.input :password,
                hint: "Votre nouveau mot de passe",
                required: false,
                input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                hint: "Ressaisir votre nouveau mot de passe",
                required: false,
                input_html: { autocomplete: "new-password" } %>
            <%= f.input :current_password,
                hint: "Mot de passe actuel",
                required: true,
                input_html: { autocomplete: "current-password" } %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Mettre à jour" %>
          </div>
        <% end %>
        <h3>Clôturer mon compte</h3>
        <p>Vous souhaitez quitter la communauté GreenR ? <%= link_to "Clôturer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
        <%# <%= link_to "Retour", :back %> %>
      </div>
    </div>
  </div>
</div>
