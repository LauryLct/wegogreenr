<div class="container sign-bkg">
  <div class="row justify-content-center">
    <div class="form-img-bckg"><%= image_tag "Logo3.png" %></div>
    <div class="col-8 col-lg-6">
      <div class="form-sign">
        <h2>Je modifie votre mot de passe</h2>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>
          <div class="form-inputs">
            <%= f.input :password,
                label: "Nouveau mot de passe",
                required: true,
                autofocus: true,
                hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Change my password", class: "EdgeButton--primary"  %>
          </div>
        <% end %>
        <div class="form-shared-links">
          <%= render "devise/shared/links" %>
        </div>
        <%# <%= link_to "Retour", :back %> %>
      </div>
    </div>
  </div>
</div>
