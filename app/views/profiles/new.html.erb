<div class="container sign-bkg">
  <div class="row justify-content-center">
    <div class="form-img-bckg">
      <%= image_tag "Logo3.png" %>
    </div>
    <div class="col-8 col-lg-6">
      <div class="form-sign">
        <h2>J'enrichis mon profil</h2>
        <%= simple_form_for @profile do |f| %>
          <%= f.input :nickname %>
          <%= f.input :first_name, prompt: "PrÃ©nom" %>
          <%= f.input :last_name, label: "Nom" %>
          <%= f.input :gender, as: :radio_buttons, collection: [['0', 'female'], ['1', 'male']], label_method: :second, value_method: :first %>
          <%= f.input :age, collection: 18..200  %>
          <%= f.input :description %>
